<launch>
  <!-- Arguments -->
  <arg name="slam_method" default="gmapping" doc="slam type [gmapping, cartographer, hector, karto, frontier_exploration]"/>
  <!-- The lua scripts are required for cartographer -->
  <arg name="configuration_basename" default="diffbot_lds_2d.lua"/>
  <arg name="open_rviz" default="true"/>

  <!-- DiffBot -->
  <!--include file="$(find diffbot_bringup)/launch/diffbot_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include-->
  <!-- TODO run robot_state_publisher, this is done if diffbot_control/launch/diffbot.launch is running before this -->

  <!-- SLAM: Gmapping, Cartographer, Hector, Karto, Frontier_exploration, RTAB-Map -->
  <include file="$(find diffbot_slam)/launch/diffbot_$(arg slam_method).launch">
    <arg name="configuration_basename" value="$(arg configuration_basename)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find diffbot_slam)/rviz/diffbot_$(arg slam_method).rviz"/>
  </group>
</launch>
